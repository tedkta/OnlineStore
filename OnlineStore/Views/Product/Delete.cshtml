@model OnlineStore.Data.Models.Product.GetProductViewModel

<h2>Are you sure you want to delete this product?</h2>

<div>
    <strong>@Model.Name</strong><br />
    Brand: @Model.Brand<br />
    Category: @Model.Category<br />
    Price: @Model.Price.ToString("C")
</div>

<form asp-action="Delete" asp-controller="Product" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("All", "Product")" class="btn btn-secondary">Cancel</a>
</form>